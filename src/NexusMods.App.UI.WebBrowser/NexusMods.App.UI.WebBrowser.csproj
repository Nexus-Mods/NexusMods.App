<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="cef.redist.osx.arm64" />
      <PackageReference Include="WebViewControl-Avalonia" />
    </ItemGroup>

    <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('OSX'))">
        <PackageSuffix>-ARM64</PackageSuffix>
        <CefGluePackageSuffix>.ARM64</CefGluePackageSuffix>
        <CefGlueTargetPlatform>osx-arm64</CefGlueTargetPlatform>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Abstractions\NexusMods.Abstractions.OAuth\NexusMods.Abstractions.OAuth.csproj" />
      <ProjectReference Include="..\NexusMods.App.UI\NexusMods.App.UI.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="WebBrowserPageFactory.cs">
        <DependentUpon>IWebBrowserPageViewModel.cs</DependentUpon>
      </Compile>
    </ItemGroup>

</Project>
