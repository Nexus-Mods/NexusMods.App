<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Abstractions\NexusMods.Abstractions.OAuth\NexusMods.Abstractions.OAuth.csproj" />
      <ProjectReference Include="..\NexusMods.App.UI\NexusMods.App.UI.csproj" />
    </ItemGroup>

    <ItemGroup Condition="$([MSBuild]::IsOSPlatform('Windows'))">
        <PackageReference Include="WebViewControl-Avalonia"/>
    </ItemGroup>

    <ItemGroup Condition="$([MSBuild]::IsOSPlatform('Linux'))">
        <PackageReference Include="WebViewControl-Avalonia"/>
    </ItemGroup>

    <ItemGroup Condition="$([MSBuild]::IsOSPlatform('OSX'))">
        <PackageReference Include="WebViewControl-Avalonia-ARM64" />
    </ItemGroup>

    <PropertyGroup>
        <BrowserProcessDir>$(MSBuildThisFileDirectory)CefGlue.BrowserProcess\bin\$(Platform)\$(Configuration)\$(DotnetVersion)</BrowserProcessDir>
        <RuntimeIdentifiers>osx-x64;osx-arm64;win-x64;win-arm64;linux-x64;linux-arm64</RuntimeIdentifiers>
    </PropertyGroup>

    <ItemGroup>
      <Compile Update="WebBrowserPageFactory.cs">
        <DependentUpon>IWebBrowserPageViewModel.cs</DependentUpon>
      </Compile>
    </ItemGroup>

</Project>
