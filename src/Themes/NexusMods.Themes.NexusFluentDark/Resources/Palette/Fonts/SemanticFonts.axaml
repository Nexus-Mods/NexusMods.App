<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Include the Primitive fonts -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="/Resources/Palette/Fonts/PrimitiveFonts.axaml" />
    </ResourceDictionary.MergedDictionaries>


    <StaticResource x:Key="FontHeadlinesRegular" ResourceKey="MontserratRegular"/>
    <StaticResource x:Key="FontHeadlinesSemiBold" ResourceKey="MontserratSemiBold"/>
    <StaticResource x:Key="FontHeadlinesBold" ResourceKey="MontserratBold"/>

    <StaticResource x:Key="FontBodyRegular" ResourceKey="RobotoRegular"/>
    <StaticResource x:Key="FontBodySemiBold" ResourceKey="RobotoSemiBold"/>
    <StaticResource x:Key="FontBodyBold" ResourceKey="RobotoBold"/>

</ResourceDictionary>

