<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- These are gradient brushes used for the elements of the UI, such as buttons, textboxes, etc. -->

    <!-- LinearGradientBrushes -->
    <LinearGradientBrush x:Key="StardewLinearGradientBrush" StartPoint="0%,50%" EndPoint="100%,50%">
        <GradientStop Color="#4ADE80" Offset="0" />
        <GradientStop Color="#2563EB" Offset="1" />
    </LinearGradientBrush>

    <!-- SurfaceLow 75% to SurfaceLow 100% -->
    <Color x:Key="CollectionHeaderImageLinearGradientStartColor">#BF1D1D21</Color>
    <Color x:Key="CollectionHeaderImageLinearGradientEndColor">#FA1D1D21</Color>
    
    <LinearGradientBrush x:Key="CollectionHeaderImageLinearGradientBrush" StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Offset="0" Color="{StaticResource CollectionHeaderImageLinearGradientStartColor}" />
        <GradientStop Offset="1" Color="{StaticResource CollectionHeaderImageLinearGradientEndColor}" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CollectionCardLinearGradientBrush" StartPoint="0%,50%" EndPoint="100%,50%">
        <GradientStop Offset="0" Color="{StaticResource SurfaceMid}" />
        <GradientStop Offset="1" Color="{StaticResource SurfaceHigh}" />
    </LinearGradientBrush>
    
</ResourceDictionary>
