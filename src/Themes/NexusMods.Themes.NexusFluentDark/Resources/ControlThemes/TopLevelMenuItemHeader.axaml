<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:NexusMods.App.UI.Controls;assembly=NexusMods.App.UI"
                    xmlns:icons="clr-namespace:NexusMods.Icons;assembly=NexusMods.Icons">

    <ControlTheme x:Key="{x:Type controls:TopLevelMenuItemHeader}" TargetType="controls:TopLevelMenuItemHeader">
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel Orientation="Horizontal" Name="StackPanel">
                    <icons:UnifiedIcon Name="Icon" Value="{TemplateBinding Icon}" />
                    <TextBlock Name="TextBlock" Text="{TemplateBinding Text}" />
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

</ResourceDictionary>

