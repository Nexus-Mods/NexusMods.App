<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        
        <!-- static values, mainly for colors, fonts, spacings from figma. -->
        <MergeResourceInclude Source="/Resources/Palette/Colors/PrimitiveColors.axaml" />
        <MergeResourceInclude Source="/Resources/Palette/Colors/BrandColors.axaml"/>
        <MergeResourceInclude Source="/Resources/Palette/Colors/ElementColors.axaml"/>
        <MergeResourceInclude Source="/Resources/Palette/Opacities/ElementOpacities.axaml"/>
        <MergeResourceInclude Source="/Resources/Palette/CornerRadiuses/ElementCornerRadius.axaml"/>
        <MergeResourceInclude Source="/Resources/Palette/Spacings/ElementSpacing.axaml"/>
        <MergeResourceInclude Source="/Resources/Palette/BoxShadows/BoxShadowsPalette.axaml"/>
        <MergeResourceInclude Source="/Resources/Typography/TextBlockControlThemes.axaml"/>
        <MergeResourceInclude Source="/Resources/Palette/Colors/ElementGradients.axaml"/>
        
        <!-- values for avalonia controls -->
        <MergeResourceInclude Source="/Resources/BaseResources.axaml"/>
        <MergeResourceInclude Source="/Resources/ControlResources.axaml"/>
                
        <!-- avalonia controls -->
        <MergeResourceInclude Source="/Controls/TextBlock.axaml"/>
        <MergeResourceInclude Source="/Controls/AccessText.axaml"/>
        <MergeResourceInclude Source="/Controls/Button.axaml"/>
        <MergeResourceInclude Source="/Controls/SplitButton.axaml"/>
        <MergeResourceInclude Source="/Controls/ComboBox.axaml"/>
        <MergeResourceInclude Source="/Controls/ComboBoxItem.axaml"/>
        <MergeResourceInclude Source="/Controls/ToggleSwitch.axaml"/>
        <MergeResourceInclude Source="/Controls/CheckBox.axaml"/>
        <MergeResourceInclude Source="/Controls/RadioButton.axaml"/>
        <MergeResourceInclude Source="/Controls/TextBox.axaml"/>
        
        <!-- custom controls (standalone components, primarily to match Figma components 
        and to replace Avalonia controls) -->
        <MergeResourceInclude Source="/Resources/ControlThemes/StandardButton.axaml"/>
        <!-- <MergeResourceInclude Source="/Resources/ControlThemes/StandardComboBox.axaml"/> -->
        <!-- <MergeResourceInclude Source="/Resources/ControlThemes/StandardSplitButton.axaml"/> -->
        
        <!-- control themes for other controls/components -->
        <MergeResourceInclude Source="/Resources/ControlThemes/UnifiedIconControlTheme.axaml"/>
        <MergeResourceInclude Source="/Resources/ControlThemes/TopLevelMenuItemHeader.axaml"/>
        <MergeResourceInclude Source="/Resources/ControlThemes/EmptyStateControlTheme.axaml"/>
        <MergeResourceInclude Source="/Resources/ControlThemes/AlertControlTheme.axaml"/>
        <MergeResourceInclude Source="/Resources/ControlThemes/PageHeaderControlTheme.axaml"/>
        
    </ResourceDictionary.MergedDictionaries>
    
</ResourceDictionary>
