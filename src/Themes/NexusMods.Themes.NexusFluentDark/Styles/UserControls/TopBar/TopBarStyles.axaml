<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:NexusMods.App.UI.Controls.TopBar;assembly=NexusMods.App.UI"
        xmlns:icons="clr-namespace:NexusMods.Icons;assembly=NexusMods.Icons">
    <Design.PreviewWith>
        <Border Width="720" Height="56">
            <ui:TopBarView />
        </Border>
    </Design.PreviewWith>

    <!-- Style Definitions -->
    <Style Selector="ui|TopBarView">

        <Style Selector="^ Border#SearchBoxBorder">
            <Setter Property="BorderBrush" Value="{StaticResource StrokeTranslucentWeakBrush}" />
        </Style>

        <Style Selector="^ Border#SearchBoxBorder">
            <Setter Property="CornerRadius" Value="{StaticResource Rounded}" />

            <Style Selector="^ TextBlock">
                <Setter Property="Foreground" Value="{StaticResource NeutralWeakBrush}" />
            </Style>

            <Style Selector="^ icons|UnifiedIcon">
                <Setter Property="Foreground" Value="{StaticResource NeutralWeakBrush}" />
            </Style>
        </Style>

        <Style Selector="^ Border#UserPanel">
            <Setter Property="BorderThickness" Value="1,0,0,0" />
        </Style>

    </Style>
</Styles>
