<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:NexusMods.App.UI.Overlays.Login;assembly=NexusMods.App.UI">
    <Design.PreviewWith>
        <Border Padding="20">
            <ui:NexusLoginOverlayView />
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    <Style Selector="ui|NexusLoginOverlayView">
        <Style Selector="^ TextBlock#TitleTextBlock">
            <Setter Property="Theme" Value="{StaticResource BodyXLBoldTheme}" />
        </Style>

        <Style Selector="^ TextBlock#CaptionTextBlock">
            <Setter Property="Theme" Value="{StaticResource BodyMDSemiTheme}" />
        </Style>

        <Style Selector="^ SelectableTextBlock#UrlTextBlock">
            <Setter Property="SelectionBrush" Value="{StaticResource PrimaryModerateBrush}" />
            <Setter Property="FontFamily" Value="{StaticResource FontBodyRegular}" />
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="FontSize" Value="14" />
        </Style>
    </Style>
</Styles>
