<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Preview -->
    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel Classes="Spacing-2_5">
                <Border BorderThickness="1" BorderBrush="White" Padding="2">
                    <TextBlock Classes="Heading2XLSemi" Text="Sample Text Heading2XLSemi" />
                </Border>
                <Border BorderThickness="1" BorderBrush="White" Padding="2">
                    <TextBlock Classes="HeadingXLSemi" Text="Sample Text HeadingXLSemi" />
                </Border>
                <Border BorderThickness="1" BorderBrush="White" Padding="2">
