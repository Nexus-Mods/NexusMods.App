    <!-- Style Definitions -->
    <Style Selector="unifiedIcon|UnifiedIcon">
        <Setter Property="Theme" Value="{StaticResource UnifiedIconTheme}" />
    </Style>

    <!-- Foreground color classes -->
    <Style Selector="unifiedIcon|UnifiedIcon.ForegroundStrong">
        <Setter Property="Foreground" Value="{StaticResource NeutralStrongBrush}" />
    </Style>

    <Style Selector="unifiedIcon|UnifiedIcon.ForegroundModerate">
        <Setter Property="Foreground" Value="{StaticResource NeutralModerateBrush}" />
    </Style>

    <Style Selector="unifiedIcon|UnifiedIcon.ForegroundSubdued">
        <Setter Property="Foreground" Value="{StaticResource NeutralSubduedBrush}" />
    </Style>

    <Style Selector="unifiedIcon|UnifiedIcon.ForegroundWeak">
        <Setter Property="Foreground" Value="{StaticResource NeutralWeakBrush}" />
    </Style>

    <Style Selector="unifiedIcon|UnifiedIcon.ForegroundInverted">
        <Setter Property="Foreground" Value="{StaticResource NeutralInvertedBrush}" />
    </Style>

