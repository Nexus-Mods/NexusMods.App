<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="16" Classes="Low" Width="600">

            <StackPanel Spacing="8">
                <TextBlock Theme="{StaticResource HeadingXSSemiTheme}">ToggleSwitch</TextBlock>
                <Grid
                    ColumnDefinitions="1*,1*,1*">

                    <!-- Default -->

                    <StackPanel Spacing="12">
                        
                        <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Default</TextBlock>

                        <ToggleSwitch />

                        <StackPanel Spacing="4">
                            <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Enabled, Unchecked</TextBlock>
                            <ToggleSwitch IsEnabled="True" IsChecked="False" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Enabled, Checked</TextBlock>
                            <ToggleSwitch IsEnabled="True" IsChecked="True" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Enabled, Indeterminate</TextBlock>
                            <ToggleSwitch IsEnabled="True" IsChecked="{x:Null}" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Disabled, Unchecked</TextBlock>
                            <ToggleSwitch IsEnabled="False" IsChecked="False" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Disabled, Checked</TextBlock>
                            <ToggleSwitch IsEnabled="False" IsChecked="True" />
                        </StackPanel>
                        <StackPanel Spacing="4">
                            <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Disabled, Indeterminate</TextBlock>
                            <ToggleSwitch IsEnabled="False" IsChecked="{x:Null}" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Compact -->

                    <StackPanel Grid.Column="1" Spacing="12">

                        <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Compact</TextBlock>


                        <ToggleSwitch Classes="Compact" />


                        <StackPanel Spacing="4">
                            <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Enabled, Unchecked</TextBlock>
                            <ToggleSwitch Classes="Compact" IsEnabled="True" IsChecked="False" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Enabled, Checked</TextBlock>
                            <ToggleSwitch Classes="Compact" IsEnabled="True" IsChecked="True" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Enabled, Indeterminate</TextBlock>
                            <ToggleSwitch Classes="Compact" IsEnabled="True" IsChecked="{x:Null}" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Disabled, Unchecked</TextBlock>
                            <ToggleSwitch Classes="Compact" IsEnabled="False" IsChecked="False" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Disabled, Checked</TextBlock>
                            <ToggleSwitch Classes="Compact" IsEnabled="False" IsChecked="True" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Disabled, Indeterminate</TextBlock>
                            <ToggleSwitch Classes="Compact" IsEnabled="False" IsChecked="{x:Null}" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Compact -->

                    <StackPanel Grid.Column="2" Spacing="12">

                        <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Extra Small</TextBlock>

                        <ToggleSwitch Classes="ExtraSmall" />

                        <StackPanel Spacing="4">
                            <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Enabled, Unchecked</TextBlock>
                            <ToggleSwitch Classes="ExtraSmall" IsEnabled="True" IsChecked="False" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Enabled, Checked</TextBlock>
                            <ToggleSwitch Classes="ExtraSmall" IsEnabled="True" IsChecked="True" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Enabled, Indeterminate</TextBlock>
                            <ToggleSwitch Classes="ExtraSmall" IsEnabled="True" IsChecked="{x:Null}" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Disabled, Unchecked</TextBlock>
                            <ToggleSwitch Classes="ExtraSmall" IsEnabled="False" IsChecked="False" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Disabled, Checked</TextBlock>
                            <ToggleSwitch Classes="ExtraSmall" IsEnabled="False" IsChecked="True" />
                        </StackPanel>

                        <StackPanel Spacing="4">
                            <TextBlock Theme="{StaticResource BodyMDBoldTheme}">Disabled, Indeterminate</TextBlock>
                            <ToggleSwitch Classes="ExtraSmall" IsEnabled="False" IsChecked="{x:Null}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <!-- Style Definitions-->

    <Style Selector="ToggleSwitch">
        <Style.Resources>
            <SolidColorBrush x:Key="ToggleSwitchFillOn" Color="{StaticResource NeutralModerate}" />
            <SolidColorBrush x:Key="ToggleSwitchStrokeOn" Color="{StaticResource NeutralModerate}" />
            <SolidColorBrush x:Key="ToggleSwitchKnobFillOn" Color="{StaticResource SurfaceMid }" />
            <SolidColorBrush x:Key="ToggleSwitchFillOnPointerOver" Color="{StaticResource NeutralModerate}" />
            <SolidColorBrush x:Key="ToggleSwitchKnobFillOnPointerOver" Color="{StaticResource SurfaceHigh }" />
            <SolidColorBrush x:Key="ToggleSwitchFillOnPressed" Color="{StaticResource NeutralModerate}" />
            <SolidColorBrush x:Key="ToggleSwitchKnobFillOnDisabled" Color="{StaticResource SurfaceLow}" />
            <SolidColorBrush x:Key="ToggleSwitchFillOnDisabled" Color="{StaticResource StrokeTranslucentWeak}" />
            <SolidColorBrush x:Key="ToggleSwitchStrokeOnDisabled" Color="{StaticResource StrokeTranslucentWeak}" />
            <SolidColorBrush x:Key="ToggleSwitchFillOff"
                             Color="{Binding Source={StaticResource SurfaceTransparentBrush}, Path=Color}"
                             Opacity="{Binding Source={StaticResource SurfaceTransparentBrush}, Path=Opacity}" />
            <SolidColorBrush x:Key="ToggleSwitchStrokeOff" Color="{StaticResource NeutralTranslucentSubdued}" />
            <SolidColorBrush x:Key="ToggleSwitchKnobFillOff" Color="{StaticResource NeutralSubdued}" />
            <SolidColorBrush x:Key="ToggleSwitchFillOffPointerOver"
                             Color="{Binding Source={StaticResource SurfaceTransparentBrush}, Path=Color}"
                             Opacity="{Binding Source={StaticResource SurfaceTransparentBrush}, Path=Opacity}" />
            <SolidColorBrush x:Key="ToggleSwitchKnobFillOffPointerOver"
                             Color="{StaticResource NeutralTranslucentStrong}" />
            <SolidColorBrush x:Key="ToggleSwitchFillOffPressed"
                             Color="{Binding Source={StaticResource SurfaceTransparentBrush}, Path=Color}"
                             Opacity="{Binding Source={StaticResource SurfaceTransparentBrush}, Path=Opacity}" />
            <SolidColorBrush x:Key="ToggleSwitchKnobFillOffDisabled" Color="{StaticResource BrandTranslucentLight200}" />
            <SolidColorBrush x:Key="ToggleSwitchFillOffDisabled" Color="{StaticResource BrandTranslucentDark50}" />
            <SolidColorBrush x:Key="ToggleSwitchStrokeOffDisabled" Color="{StaticResource BrandTranslucentLight50}" />

            <Thickness x:Key="ToggleSwitchTopHeaderMargin">0</Thickness>
            <GridLength x:Key="ToggleSwitchPreContentMargin">0</GridLength>
            <GridLength x:Key="ToggleSwitchPostContentMargin">0</GridLength>
            <x:Double x:Key="ToggleSwitchThemeMinWidth">0</x:Double>
            <Thickness x:Key="ToggleSwitchOnStrokeThickness">0</Thickness>
            <Thickness x:Key="ToggleSwitchOuterBorderStrokeThickness">0</Thickness>
        </Style.Resources>

        <Setter Property="ClipToBounds" Value="False" />

        <Setter Property="Template">
            <ControlTemplate>
                <Grid Background="{TemplateBinding Background}" RowDefinitions="Auto,*">

                    <ContentPresenter
                        Content="{TemplateBinding Content}"
                        ContentTemplate="{TemplateBinding ContentTemplate}"
                        Grid.Row="0"
                        Margin="{DynamicResource ToggleSwitchTopHeaderMargin}"
                        RecognizesAccessKey="True"
                        VerticalAlignment="Top"
                        x:Name="PART_ContentPresenter" />

                    <Grid
                        Grid.Row="1"
                        HorizontalAlignment="Left"
                        MinWidth="{DynamicResource ToggleSwitchThemeMinWidth}">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="{DynamicResource ToggleSwitchPreContentMargin}" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="{DynamicResource ToggleSwitchPostContentMargin}" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition MaxWidth="12" Width="12" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid
                            Background="{DynamicResource ToggleSwitchContainerBackground}"
                            Grid.ColumnSpan="3"
                            Grid.RowSpan="3"
                            TemplatedControl.IsTemplateFocusTarget="True"
                            x:Name="SwitchAreaGrid" />

                        <!-- label when off -->
                        <ContentPresenter
                            Content="{TemplateBinding OffContent}"
                            ContentTemplate="{TemplateBinding OffContentTemplate}"
                            Grid.Column="2"
                            Grid.Row="0"
                            Grid.RowSpan="3"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            x:Name="PART_OffContentPresenter" />

                        <!-- label when on -->
                        <ContentPresenter
                            Content="{TemplateBinding OnContent}"
                            ContentTemplate="{TemplateBinding OnContentTemplate}"
                            Grid.Column="2"
                            Grid.Row="0"
                            Grid.RowSpan="3"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            x:Name="PART_OnContentPresenter" />

                        <Border
                            Background="{StaticResource ToggleSwitchFillOff}"
                            BorderBrush="{DynamicResource ToggleSwitchStrokeOff}"
                            BorderThickness="2"
                            CornerRadius="{StaticResource Rounded-full}"
                            Height="32"
                            Width="52"
                            VerticalAlignment="Top"
                            Grid.Row="1"
                            Grid.Column="0"
                            x:Name="OuterBorder" />

                        <Border
                            Background="{StaticResource ToggleSwitchFillOn}"
                            BorderBrush="{DynamicResource ToggleSwitchStrokeOn}"
                            BorderThickness="2"
                            CornerRadius="{StaticResource Rounded-full}"
                            Height="32"
                            Width="52"
                            VerticalAlignment="Top"
                            Grid.Row="1"
                            Grid.Column="0"
                            x:Name="SwitchKnobBounds" />

                        <Canvas
                            Grid.Row="1"
                            Grid.Column="0"
                            Width="20"
                            HorizontalAlignment="Left"
                            x:Name="PART_SwitchKnob">
                            <Grid
                                Margin="4,4,0,0"
                                Height="24"
                                Width="24"
                                x:Name="PART_MovingKnobs">
                                <Ellipse
                                    Fill="{StaticResource BrandTranslucentLight50}"
                                    Opacity="0"
                                    Height="40"
                                    Width="40"
                                    x:Name="SwitchKnobOuter" />
                                <Ellipse
                                    Fill="{StaticResource ToggleSwitchKnobFillOn}"
                                    Height="24"
                                    Width="24"
                                    x:Name="SwitchKnobOn" />
                                <Ellipse
                                    Fill="{StaticResource ToggleSwitchKnobFillOff}"
                                    Height="16"
                                    Width="16"
                                    x:Name="SwitchKnobOff" />
                            </Grid>
                        </Canvas>

                        <!-- NOTE (insomnious):                         
                        The below elements have been added and are only shown when the control is 'indeterminate' and is
                        to force the indeterminate visual state without relying on the original controls knob position.
                        This is a workaround for the lack of knob movement when IsChecked is set to null.                        
                        -->

                        <Grid
                            Grid.Row="1"
                            Grid.Column="0"
                            Height="24"
                            Width="24"
                            Margin="0,0,0,0"
                            x:Name="FAKE_KnobGrid">
                            <Ellipse
                                Fill="{StaticResource BrandTranslucentLight50}"
                                Opacity="1"
                                Height="40"
                                Width="40"
                                x:Name="FAKE_KNOBHOVER" />
                            <Ellipse
                                Fill="{StaticResource ToggleSwitchKnobFillOn}"
                                Opacity="1"
                                Height="24"
                                Width="24"
                                x:Name="FAKE_KnobOuter" />
                            <Ellipse
                                Fill="{StaticResource ToggleSwitchKnobFillOff}"
                                Opacity="1"
                                Height="16"
                                Width="16"
                                x:Name="FAKE_KnobInner" />
                        </Grid>
                    </Grid>
                </Grid>
            </ControlTemplate>
        </Setter>

        <Style Selector="^ /template/ ContentPresenter#PART_ContentPresenter:empty">
            <Setter Property="Margin" Value="0" />
        </Style>

        <Style Selector="^ /template/ Grid#FAKE_KnobGrid">
            <Setter Property="Opacity" Value="0" />
        </Style>

        <Setter Property="KnobTransitions">
            <Transitions>
                <DoubleTransition
                    Duration="0:0:0.4"
                    Easing="CubicEaseOut"
                    Property="Canvas.Left" />
            </Transitions>
        </Setter>


        <!-- COMPACT class overrides -->
        <Style Selector="^.Compact">
            <!-- <Setter Property="Background" Value="DarkSlateGray" /> -->
            <Setter Property="Height" Value="20" />
            <Setter Property="Width" Value="40" />

            <Style Selector="^ /template/ Border#OuterBorder">
                <Setter Property="Height" Value="20" />
                <Setter Property="Width" Value="40" />
            </Style>
            
            <Style Selector="^ /template/ Border#SwitchKnobBounds">
                <Setter Property="Height" Value="20" />
                <Setter Property="Width" Value="40" />
            </Style>
            
            <Style Selector="^ /template/ Grid#SwitchAreaGrid">
                <Setter Property="Height" Value="20" />
                <Setter Property="Width" Value="40" />
            </Style>

            <Style Selector="^ /template/ Ellipse#SwitchKnobOn">
                <Setter Property="Height" Value="16" />
                <Setter Property="Width" Value="16" />
            </Style>

            <Style Selector="^ /template/ Ellipse#SwitchKnobOff">
                <Setter Property="Height" Value="12" />
                <Setter Property="Width" Value="12" />
            </Style>

            <Style Selector="^ /template/ Ellipse#SwitchKnobOuter">
                <Setter Property="Height" Value="32" />
                <Setter Property="Width" Value="32" />
            </Style>

            <Style Selector="^ /template/ Canvas#PART_SwitchKnob">
                <Setter Property="Width" Value="20" />
                <Setter Property="Margin" Value="0,-2,0,0" />
            </Style>
            
            <Style Selector="^ /template/ Grid#PART_MovingKnobs">
                <Setter Property="Margin" Value="-2,0,0,0" />
            </Style>
            
            <Style Selector="^ /template/ Grid#FAKE_KnobGrid">
                <Setter Property="Margin" Value="0,-2,0,0" />
            </Style>
            
            <Style Selector="^ /template/ Ellipse#FAKE_KnobOuter">
                <Setter Property="Height" Value="16" />
                <Setter Property="Width" Value="16" />
            </Style>

            <Style Selector="^ /template/ Ellipse#FAKE_KnobInner">
                <Setter Property="Height" Value="10" />
                <Setter Property="Width" Value="10" />
            </Style>

            <Style Selector="^ /template/ Ellipse#FAKE_KNOBHOVER">
                <Setter Property="Height" Value="32" />
                <Setter Property="Width" Value="32" />
            </Style>
        </Style>

        <!-- ExtraSmall class overrides -->
        <Style Selector="^.ExtraSmall">
            <!-- <Setter Property="Background" Value="DarkSlateBlue" /> -->

            <Setter Property="Height" Value="16" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Margin" Value="0" />

            <Style Selector="^ /template/ Border#OuterBorder">
                <Setter Property="Height" Value="16" />
                <Setter Property="Width" Value="32" />
                <Setter Property="Margin" Value="0" />
            </Style>

            <Style Selector="^ /template/ Border#SwitchKnobBounds">
                <Setter Property="Padding" Value="0" />
                <Setter Property="Height" Value="16" />
                <Setter Property="Width" Value="32" />
                <Setter Property="Margin" Value="0" />
            </Style>

            <Style Selector="^ /template/ Ellipse#SwitchKnobOn">
                <Setter Property="Height" Value="12" />
                <Setter Property="Width" Value="12" />
            </Style>

            <Style Selector="^ /template/ Ellipse#SwitchKnobOff">
                <Setter Property="Height" Value="8" />
                <Setter Property="Width" Value="8" />
                <Setter Property="Margin" Value="0" />
            </Style>

            <Style Selector="^ /template/ Ellipse#SwitchKnobOuter">
                <Setter Property="Height" Value="24" />
                <Setter Property="Width" Value="24" />
                <Setter Property="Margin" Value="0" />
            </Style>

            <Style Selector="^ /template/ Canvas#PART_SwitchKnob">
                <!-- <Setter Property="Background" Value="DarkRed" /> -->
                <Setter Property="Width" Value="16" />
                <Setter Property="Margin" Value="0,-4,0,0" />
            </Style>

            <Style Selector="^ /template/ Grid#FAKE_KnobGrid">
                <Setter Property="Margin" Value="0,-4,0,0" />
            </Style>
            
            <Style Selector="^ /template/ Ellipse#FAKE_KnobOuter">
                <Setter Property="Height" Value="12" />
                <Setter Property="Width" Value="12" />
            </Style>

            <Style Selector="^ /template/ Ellipse#FAKE_KnobInner">
                <Setter Property="Height" Value="8" />
                <Setter Property="Width" Value="8" />
            </Style>

            <Style Selector="^ /template/ Ellipse#FAKE_KNOBHOVER">
                <Setter Property="Height" Value="28" />
                <Setter Property="Width" Value="28" />
            </Style>
            
            <Style Selector="^ /template/ Grid#PART_MovingKnobs">
                <Setter Property="Margin" Value="-4,0,0,0" />
            </Style>
            
            <Style Selector="^ /template/ Grid#FAKE_KNOBGRID">
                <Setter Property="Margin" Value="0" />
            </Style>
        </Style>

        <!-- start of checked state -->
        <Style Selector="^:checked">
            <Style Selector="^ /template/ Border#OuterBorder">
                <Setter Property="Opacity" Value="1" />
                <Setter Property="Background" Value="{StaticResource ToggleSwitchFillOn}" />
                <Setter Property="BorderBrush" Value="{StaticResource ToggleSwitchStrokeOn}" />
            </Style>

            <Style Selector="^ /template/ Ellipse#SwitchKnobOff">
                <Setter Property="Opacity" Value="0" />
            </Style>

            <Style Selector="^ /template/ Border#SwitchKnobBounds">
                <Setter Property="Opacity" Value="0" />
            </Style>

            <Style Selector="^ /template/ Ellipse#SwitchKnobOn">
                <Setter Property="Opacity" Value="1" />
                <Setter Property="Fill" Value="{StaticResource ToggleSwitchKnobFillOn}" />
            </Style>

            <Style Selector="^ /template/ ContentPresenter#PART_OffContentPresenter">
                <Setter Property="Opacity" Value="0" />
            </Style>

            <Style Selector="^ /template/ ContentPresenter#PART_OnContentPresenter">
                <Setter Property="Opacity" Value="1" />
            </Style>
        </Style>


        <!--  start of unchecked state  -->
        <Style Selector="^:unchecked">

            <Style Selector="^ /template/ Border#OuterBorder">
                <Setter Property="Opacity" Value="1" />
                <Setter Property="Background" Value="{StaticResource ToggleSwitchFillOff}" />
                <Setter Property="BorderBrush" Value="{StaticResource ToggleSwitchStrokeOff}" />
            </Style>

            <Style Selector="^ /template/ Ellipse#SwitchKnobOff">
                <Setter Property="Opacity" Value="1" />
                <Setter Property="Fill" Value="{StaticResource ToggleSwitchKnobFillOff}" />
            </Style>

            <Style Selector="^ /template/ Ellipse#SwitchKnobOn">
                <Setter Property="Opacity" Value="0" />
            </Style>

            <Style Selector="^ /template/ Border#SwitchKnobBounds">
                <Setter Property="Opacity" Value="0" />
            </Style>

            <Style Selector="^ /template/ ContentPresenter#PART_OffContentPresenter">
                <Setter Property="Opacity" Value="1" />
            </Style>

            <Style Selector="^ /template/ ContentPresenter#PART_OnContentPresenter">
                <Setter Property="Opacity" Value="0" />
            </Style>
        </Style>


        <!-- start of indeterminate state -->
        <Style Selector="^:indeterminate">

            <!-- show fake knob -->
            <Style Selector="^ /template/ Grid#FAKE_KnobGrid">
                <Setter Property="Opacity" Value="1" />
            </Style>

            <Style Selector="^ /template/ Ellipse#FAKE_KnobOuter">
                <Setter Property="Fill" Value="{StaticResource ToggleSwitchKnobFillOn}" />
            </Style>

            <Style Selector="^ /template/ Ellipse#FAKE_KnobInner">
                <Setter Property="Fill" Value="{StaticResource ToggleSwitchFillOn}" />
            </Style>

            <Style Selector="^ /template/ Ellipse#FAKE_KNOBHOVER">
                <Setter Property="Opacity" Value="0" />
            </Style>

            <Style Selector="^ /template/ Ellipse#SwitchKnobOff">
                <Setter Property="Opacity" Value="0" />
            </Style>

            <Style Selector="^ /template/ Ellipse#SwitchKnobOn">
                <Setter Property="Opacity" Value="0" />
            </Style>
        </Style>


        <!--  start of hover state  -->
        <Style Selector="^:pointerover">
            <Style Selector="^ /template/ Ellipse#SwitchKnobOff">
                <Setter Property="Fill" Value="{StaticResource ToggleSwitchKnobFillOffPointerOver}" />
            </Style>

            <Style Selector="^ /template/ Ellipse#SwitchKnobOn">
                <Setter Property="Fill" Value="{StaticResource ToggleSwitchKnobFillOnPointerOver}" />
            </Style>

            <Style Selector="^ /template/ Ellipse#SwitchKnobOuter">
                <Setter Property="Opacity" Value="1" />
            </Style>

            <!-- indeterminate -->
            <Style Selector="^:indeterminate">

                <Style Selector="^ /template/ Border#SwitchKnobBounds">
                    <Setter Property="BorderThickness" Value="0" />
                </Style>

                <Style Selector="^ /template/ Ellipse#SwitchKnobOuter">
                    <Setter Property="Opacity" Value="0" />
                </Style>

                <Style Selector="^ /template/ Ellipse#FAKE_KNOBHOVER">
                    <Setter Property="Opacity" Value="1" />
                </Style>

            </Style>
        </Style>


        <!--  start of pressed state  -->
        <Style Selector="^:pressed">
            <Style Selector="^ /template/ Border#SwitchKnobBounds">
                <Setter Property="Background" Value="{StaticResource ToggleSwitchFillOnPressed}" />
                <Setter Property="BorderBrush" Value="{DynamicResource ToggleSwitchStrokeOnPressed}" />
            </Style>

            <Style Selector="^ /template/ Ellipse#SwitchKnobOff">
                <Setter Property="Fill" Value="{DynamicResource ToggleSwitchKnobFillOffPressed}" />
                <Setter Property="Width" Value="28" />
                <Setter Property="Height" Value="28" />
                <!-- need to move knob slightly left after size increase -->
            </Style>

            <Style Selector="^ /template/ Ellipse#SwitchKnobOn">
                <Setter Property="Fill" Value="{StaticResource ToggleSwitchKnobFillOnPointerOver}" />
                <Setter Property="Width" Value="28" />
                <Setter Property="Height" Value="28" />
            </Style>

            <!-- indeterminate -->
            <Style Selector="^:indeterminate">
                <Style Selector="^ /template/ Ellipse#SwitchKnobOff">
                    <Setter Property="Opacity" Value="1" />
                    <Setter Property="Fill" Value="{StaticResource ToggleSwitchFillOn}" />
                    <Setter Property="Width" Value="20" />
                    <Setter Property="Height" Value="20" />
                </Style>
            </Style>

            <!-- COMPACT -->
            <Style Selector="^.Compact">
                <Style Selector="^ /template/ Ellipse#SwitchKnobOn">
                    <Setter Property="Width" Value="16" />
                    <Setter Property="Height" Value="16" />
                </Style>

                <Style Selector="^ /template/ Ellipse#SwitchKnobOff">
                    <Setter Property="Width" Value="14" />
                    <Setter Property="Height" Value="14" />
                </Style>

                <Style Selector="^ /template/ Grid#SwitchAreaGrid">
                    <Setter Property="Background" Value="{DynamicResource ToggleSwitchContainerBackgroundPressed}" />
                </Style>

                <!-- indeterminate -->
                <Style Selector="^:indeterminate /template/ Ellipse#SwitchKnobOff">
                    <Setter Property="Width" Value="8" />
                    <Setter Property="Height" Value="8" />
                </Style>
            </Style>
            
            <!-- EXTRA SMALL -->
            <Style Selector="^.ExtraSmall">
                <Style Selector="^ /template/ Ellipse#SwitchKnobOn">
                    <Setter Property="Width" Value="14" />
                    <Setter Property="Height" Value="14" />
                </Style>

                <Style Selector="^ /template/ Ellipse#SwitchKnobOff">
                    <Setter Property="Width" Value="10" />
                    <Setter Property="Height" Value="10" />
                </Style>

                <Style Selector="^ /template/ Grid#SwitchAreaGrid">
                    <Setter Property="Background" Value="{DynamicResource ToggleSwitchContainerBackgroundPressed}" />
                </Style>

                <!-- indeterminate -->
                <Style Selector="^:indeterminate /template/ Ellipse#SwitchKnobOff">
                    <Setter Property="Width" Value="7" />
                    <Setter Property="Height" Value="7" />
                </Style>
            </Style>
        </Style>


        <!-- start of disabled state -->
        <Style Selector="^:disabled">
            <Setter Property="Foreground" Value="{DynamicResource ToggleSwitchHeaderForegroundDisabled}" />

            <Style Selector="^ /template/ Border#OuterBorder">
                <Setter Property="BorderBrush" Value="{DynamicResource ToggleSwitchStrokeOffDisabled}" />
                <Setter Property="Background" Value="{DynamicResource ToggleSwitchFillOffDisabled}" />
            </Style>

            <Style Selector="^ /template/ Ellipse#SwitchKnobOff">
                <Setter Property="Fill" Value="{DynamicResource ToggleSwitchKnobFillOffDisabled}" />
            </Style>

            <Style Selector="^ /template/ Ellipse#SwitchKnobOn">
                <Setter Property="Fill" Value="{DynamicResource ToggleSwitchKnobFillOnDisabled}" />
            </Style>

            <!-- checked -->
            <Style Selector="^:checked /template/ Border#OuterBorder">
                <Setter Property="Background" Value="{DynamicResource ToggleSwitchFillOnDisabled}" />
                <Setter Property="BorderBrush" Value="{DynamicResource ToggleSwitchStrokeOnDisabled}" />
                <Setter Property="BorderThickness" Value="0" />
                <!-- turn off border as it's not needed -->
            </Style>

            <!-- unchecked -->
            <Style Selector="^:unchecked /template/ Border#OuterBorder">
                <Setter Property="Background" Value="{DynamicResource ToggleSwitchFillOffDisabled}" />
                <Setter Property="BorderBrush" Value="{DynamicResource ToggleSwitchStrokeOffDisabled}" />
            </Style>

            <!-- indeterminate -->
            <Style Selector="^:indeterminate">
                <Style Selector="^/template/ Border#OuterBorder">
                    <Setter Property="Background" Value="{DynamicResource ToggleSwitchFillOnDisabled}" />
                    <Setter Property="BorderThickness" Value="0" />
                    <!-- turn off border as it's not needed  -->
                </Style>

                <Style Selector="^ /template/ Ellipse#FAKE_KnobOuter">
                    <Setter Property="Fill" Value="{DynamicResource ToggleSwitchKnobFillOnDisabled}" />
                </Style>

                <Style Selector="^ /template/ Ellipse#FAKE_KnobInner">
                    <Setter Property="Fill" Value="{DynamicResource ToggleSwitchStrokeOnDisabled}" />
                </Style>

                <Style Selector="^ /template/ Border#SwitchKnobBounds">
                    <Setter Property="Opacity" Value="0" />
                </Style>

                <Style Selector="^ /template/ Ellipse#SwitchKnobOff">
                    <Setter Property="Fill" Value="{DynamicResource ToggleSwitchFillOnDisabled}" />
                </Style>

                <Style Selector="^ /template/ Ellipse#SwitchKnobOn">
                    <Setter Property="Fill" Value="{DynamicResource ToggleSwitchKnobFillOnDisabled}" />
                </Style>

            </Style>
        </Style>


    </Style>
</Styles>
