<reactiveUi:ReactiveWindow
    ExtendClientAreaChromeHints="NoChrome"
    ExtendClientAreaTitleBarHeightHint="0"
    ExtendClientAreaToDecorationsHint="True"
    Icon="/Assets/nexus-logo.ico"
    Title="NexusMods.App.UI"
    d:DesignHeight="450"
    d:DesignWidth="800"
    helpers:InjectedDataContext.ViewModel="vm:MainWindowViewModel"
    mc:Ignorable="d"
    x:Class="NexusMods.App.UI.Views.MainWindow"
    x:TypeArguments="vm:MainWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:avalonia="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia"
    xmlns:buttons="clr-namespace:NexusMods.App.UI.Controls.Spine.Buttons;assembly=NexusMods.App.UI"
    xmlns:controls="clr-namespace:NexusMods.App.UI.Controls;assembly=NexusMods.App.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:NexusMods.App.UI.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:rightContent="clr-namespace:NexusMods.App.UI.RightContent"
    xmlns:spine="clr-namespace:NexusMods.App.UI.Controls.Spine"
    xmlns:svg="clr-namespace:Avalonia.Svg;assembly=Avalonia.Svg"
    xmlns:views="clr-namespace:NexusMods.App.UI.Views"
    xmlns:vm="using:NexusMods.App.UI.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="72, 216, *" RowDefinitions="62, *">
        <Svg
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="0"
            Height="30"
            HorizontalAlignment="Left"
            Margin="12,16"
            Path="avares://NexusMods.App.UI/Assets/nexus-logo-with-text.svg"
            VerticalAlignment="Center"
            Width="127" />

        <Border
            BorderBrush="{DynamicResource StructuralBorderBrush}"
            BorderThickness="1,0"
            Grid.Column="1"
            Grid.Row="1" />
        <Border
            BorderBrush="{DynamicResource StructuralBorderBrush}"
            BorderThickness="0,0,0,1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Grid.Row="0" />
        <Border
            BorderBrush="{DynamicResource StructuralBorderBrush}"
            BorderThickness="0,0,1,0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="0" />

        <TextBlock
            Classes="TopTitle"
            Grid.Column="2"
            Grid.Row="0"
            Margin="24,22.5"
            Text="HOME" />

        <reactiveUi:ViewModelViewHost
            Grid.Column="0"
            Grid.Row="1"
            x:Name="Spine" />

        <StackPanel
            Grid.Column="1"
            Grid.Row="1"
            Margin="12,24">
            <Button Classes="Menu Selected">
                <Grid ColumnDefinitions="38, *">
                    <Svg Grid.Column="0" Path="avares://NexusMods.App.UI/Assets/Icons/newspaper-variant-outline-1.svg" />
                    <TextBlock Grid.Column="1" Text="Newsfeed" />
                </Grid>
            </Button>

            <Button Classes="Menu">
                <Grid ColumnDefinitions="38, *">
                    <Svg Grid.Column="0" Path="avares://NexusMods.App.UI/Assets/Icons/bookmarks_24px.svg" />
                    <TextBlock Grid.Column="1" Text="My Games" />
                </Grid>
            </Button>

            <Button Classes="Menu">
                <Grid ColumnDefinitions="38, *">
                    <Svg Grid.Column="0" Path="avares://NexusMods.App.UI/Assets/Icons/videogame_asset_24px.svg" />
                    <TextBlock Grid.Column="1" Text="Browse Games" />
                </Grid>
            </Button>

        </StackPanel>

        <reactiveUi:ViewModelViewHost
            Grid.Column="2"
            Grid.Row="1"
            x:Name="RightContent" />

    </Grid>




</reactiveUi:ReactiveWindow>
