<reactiveUi:ReactiveUserControl x:TypeArguments="prototype:ILoadOrderViewModel" xmlns="https://github.com/avaloniaui"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:reactiveUi="http://reactiveui.net"
                                xmlns:controls="clr-namespace:NexusMods.App.UI.Controls"
                                xmlns:icons="clr-namespace:NexusMods.Icons;assembly=NexusMods.Icons"
                                xmlns:games="clr-namespace:NexusMods.Abstractions.Games;assembly=NexusMods.Abstractions.Games"
                                xmlns:prototype="clr-namespace:NexusMods.App.UI.Pages.Sorting.Prototype"
                                mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                                x:Class="NexusMods.App.UI.Pages.Sorting.Prototype.LoadOrderView">
    <StackPanel Orientation="Vertical">
        <ItemsControl x:Name="ItemsList">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="games:ISortableItemViewModel">
                    <StackPanel Orientation="Horizontal">
                        <controls:StandardButton x:Name="UpButton"
                                                 Command="{CompiledBinding MoveDown}"
                                                 LeftIcon="{x:Static icons:IconValues.ArrowUp}"
                                                 ShowIcon="Left"
                                                 Text="" />
                        <controls:StandardButton x:Name="DownButton"
                                                 Command="{CompiledBinding MoveUp}"
                                                 LeftIcon="{x:Static icons:IconValues.ArrowDown}"
                                                 ShowIcon="Left"
                                                 Text="" />
                        <TextBlock x:Name="ItemIndex"
                                   Text="{CompiledBinding SortIndex}" />
                        <TextBlock x:Name="ItemText"
                                   Text="{CompiledBinding DisplayName}" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TreeDataGrid x:Name="SortOrderTreeDataGrid"
                      AutoDragDropRows="True"
                      RowDrop="OnRowDrop"
                      Margin="0,20"
                      >
            <TreeDataGrid.Resources>
                <DataTemplate x:Key="IndexColumnDataTemplate"
                              DataType="games:ISortableItemViewModel">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="ItemIndex"
                                   Text="{CompiledBinding SortIndex}" />
                        <controls:StandardButton x:Name="UpButton"
                                                 Command="{CompiledBinding MoveDown}"
                                                 LeftIcon="{x:Static icons:IconValues.ArrowUp}"
                                                 ShowIcon="Left"
                                                 Text="" />
                        <controls:StandardButton x:Name="DownButton"
                                                 Command="{CompiledBinding MoveUp}"
                                                 LeftIcon="{x:Static icons:IconValues.ArrowDown}"
                                                 ShowIcon="Left"
                                                 Text="" />
                    </StackPanel>
                </DataTemplate>
            </TreeDataGrid.Resources>

        </TreeDataGrid>
        <TextBlock Text="Placeholder"/>
    </StackPanel>

</reactiveUi:ReactiveUserControl>
