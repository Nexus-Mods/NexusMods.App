<reactiveUi:ReactiveUserControl
    d:DesignHeight="36"
    d:DesignWidth="200"
    mc:Ignorable="d"
    x:Class="NexusMods.App.UI.LeftMenu.Items.LaunchButtonView"
    x:TypeArguments="items:ILaunchButtonViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:avalonia="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:items="clr-namespace:NexusMods.App.UI.LeftMenu.Items"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <ProgressBar Classes="LaunchButton" x:Name="ProgressBarControl" IsVisible="False" ShowProgressText="True"></ProgressBar> 
        <Button
            IsVisible="True"
            Classes="Standard PrimaryOutlined"
            HorizontalAlignment="Stretch"
            x:Name="LaunchButton">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <avalonia:Icon Value="mdi-play" x:Name="LaunchIcon" />
                <TextBlock Text="Launch" x:Name="LaunchText" />
            </StackPanel>
        </Button>
    </Grid>
</reactiveUi:ReactiveUserControl>

