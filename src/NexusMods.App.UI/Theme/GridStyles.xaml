<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonia="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia">
    <Design.PreviewWith >
        <StackPanel Width="920">
            <Grid ColumnDefinitions="*, Auto" Classes="Toolbar" HorizontalAlignment="Stretch">
                <TextBlock Grid.Column="0" Text="TOOL BAR HEADER" Classes="Header"></TextBlock>
                <Button Grid.Column="1" Classes="Toolbar">
                    <StackPanel>
                        <avalonia:Icon Classes="RemoveCircleOutline"/>
                        <TextBlock Text="Remove"></TextBlock>
                    </StackPanel>
                </Button>
            </Grid>
        </StackPanel>
    </Design.PreviewWith>
    
    <Style Selector="Grid.Toolbar">
        <Setter Property="Height" Value="52"></Setter>
        <Setter Property="Background" Value="{DynamicResource BrandSecondaryDarker}"></Setter>
    </Style>
    
    
    
</Styles>
