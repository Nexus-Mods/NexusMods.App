<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style Selector="StackPanel.TopBarActions">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="Spacing" Value="16"></Setter>
        <Setter Property="Margin" Value="16, 0"></Setter>
    </Style>
    
    <Style Selector="StackPanel.LeftPaneButtonList">
        <Setter Property="Spacing" Value="4"></Setter>
        <Setter Property="Margin" Value="16"></Setter>
        <Setter Property="Background" Value="{DynamicResource BackgroundPrimaryColor}"></Setter>
    </Style>
    
    <Style Selector="StackPanel.LeftPane">
        <Setter Property="Background" Value="{DynamicResource BackgroundPrimaryColor}"></Setter>
    </Style>
</Styles>