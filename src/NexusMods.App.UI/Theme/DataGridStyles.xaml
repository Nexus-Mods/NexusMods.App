<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style Selector="DataGrid">
        <Setter Property="Background" Value="{DynamicResource BrandSecondaryBrush}" />
    </Style>
    <Style Selector="DataGridColumnHeader">
        <Setter Property="Background" Value="{DynamicResource BrandSecondaryBrush}" />
        <Setter Property="FontFamily" Value="{DynamicResource FontPrimarySemiBold}" />
        <Setter Property="Foreground" Value="{DynamicResource BrandWhite}" />
        <Setter Property="FontWeight" Value="600" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style Selector="DataGridRow:selected Rectangle#BackgroundRectangle">
        <Setter Property="Fill" Value="{DynamicResource BrandPrimaryBrush}" />
    </Style>

    <Style Selector="DataGridCell">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="0" />
    </Style>
    <Style Selector="DataGridCell:selected">
        <Setter Property="BorderThickness" Value="1" />
    </Style>
</Styles>
