<reactiveUi:ReactiveUserControl x:TypeArguments="loadoutCard:ICreateNewLoadoutCardViewModel" xmlns="https://github.com/avaloniaui"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:panels="clr-namespace:Avalonia.Labs.Panels;assembly=Avalonia.Labs.Panels"
                                xmlns:icons="clr-namespace:NexusMods.Icons;assembly=NexusMods.Icons"
                                xmlns:reactiveUi="http://reactiveui.net"
                                xmlns:loadoutCard="clr-namespace:NexusMods.App.UI.Controls.LoadoutCard"
                                mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                                x:Class="NexusMods.App.UI.Controls.LoadoutCard.CreateNewLoadoutCardView">

    <Button x:Name="CreateNewLoadoutButton">
        <panels:FlexPanel x:Name="CreateNewLoadoutFlexPanel">
            <TextBlock x:Name="CreateNewLoadoutTexBlock" Text="Create new loadout" />
            <icons:UnifiedIcon x:Name="AddIcon" Classes="Add" />
        </panels:FlexPanel>
    </Button>
</reactiveUi:ReactiveUserControl>
