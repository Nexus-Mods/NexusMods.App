<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:ui="clr-namespace:NexusMods.App.UI.Controls.GameWidget"
    xmlns:unifiedIcon="clr-namespace:NexusMods.App.UI.Controls.UnifiedIcon;assembly=NexusMods.App.UI"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.PreviewWith>
        <Border Padding="20">
            <ui:GameWidget >
                <Design.DataContext>
                    <ui:GameWidgetDesignViewModel />
                </Design.DataContext>
            </ui:GameWidget>
        </Border>
    </Design.PreviewWith>

    <Style Selector="ui|GameWidget Button.FirstButton unifiedIcon|UnifiedIcon">
        <Setter Property="Size" Value="20" />
        <Setter Property="Foreground" Value="{DynamicResource NeutralStrongBrush}" />
    </Style>

</Styles>
