<reactiveUi:ReactiveUserControl
    d:DataContext=""
    d:DesignHeight="56"
    d:DesignWidth="1280"
    mc:Ignorable="d"
    x:Class="NexusMods.App.UI.Controls.TopBar.TopBarView"
    x:TypeArguments="topBar:TopBarViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:avalonia="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pills="clr-namespace:NexusMods.App.UI.Controls.Pills"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:topBar="clr-namespace:NexusMods.App.UI.Controls.TopBar"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.DataContext>
        <topBar:TopBarDesignViewModel />
    </Design.DataContext>
    <Grid ColumnDefinitions="Auto, Auto, *, Auto, Auto, 3, Auto">
        <Svg
            Grid.Column="0"
            Grid.Row="0"
            Height="34"
            HorizontalAlignment="Left"
            Margin="12,10"
            Path="avares://NexusMods.App.UI/Assets/nexus-logo-with-text.svg"
            VerticalAlignment="Center"
            Width="100" />

        <pills:Premium
            Grid.Column="1"
            Grid.Row="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            x:Name="Premium" />

        <Border
            BorderBrush="{DynamicResource StructuralBorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Grid.Column="2"
            Height="36"
            Margin="12,0">
            <StackPanel
                Margin="11"
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <avalonia:Icon
                    FontSize="11"
                    Foreground="{DynamicResource StructuralBorderBrush}"
                    Value="mdi-magnify" />
                <TextBlock
                    Foreground="{DynamicResource StructuralBorderBrush}"
                    HorizontalAlignment="Left"
                    Margin="7,0"
                    Text="Search"
                    VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <StackPanel Grid.Column="3" Orientation="Horizontal">
            <Button Classes="BareIcon Help" />

            <Button Classes="BareIcon Cog" />
        </StackPanel>

        <Button
            Classes="Primary"
            Grid.Column="4"
            Height="34"
            x:Name="LoginButton">
            <TextBlock Height="20">LOG IN</TextBlock>
        </Button>

        <StackPanel
            Grid.Column="4"
            Orientation="Horizontal"
            x:Name="UserPanel">
            <Button Classes="BareIcon Bell" />
            <Button>
                <Border
                    Background="#C4C4C4"
                    CornerRadius="40"
                    Height="30"
                    Width="30" />
            </Button>
        </StackPanel>



        <Border
            BorderBrush="{DynamicResource AccentButtonBorderBrush}"
            BorderThickness="1"
            Grid.Column="5"
            Height="34"
            Width="1" />

        <Grid
            Classes="WindowControls"
            ColumnDefinitions="*, *, *"
            Grid.Column="6"
            HorizontalAlignment="Right"
            Width="160">

            <Button
                Classes="BareIcon WindowMinimize"
                Grid.Column="0"
                Padding="11" />
            <Button
                Classes="BareIcon WindowMaximize"
                Grid.Column="1"
                Padding="11" />
            <Button
                Classes="BareIcon WindowClose"
                Grid.Column="2"
                Padding="11" />


        </Grid>
    </Grid>
</reactiveUi:ReactiveUserControl>
