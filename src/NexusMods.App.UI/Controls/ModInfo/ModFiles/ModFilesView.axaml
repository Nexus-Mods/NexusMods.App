<reactiveUi:ReactiveUserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="NexusMods.App.UI.Controls.ModInfo.ModFiles.ModFilesView"
    x:TypeArguments="viewModFiles:IModFilesViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:resources="clr-namespace:NexusMods.App.UI.Resources"
    xmlns:viewModFiles="clr-namespace:NexusMods.App.UI.Controls.ModInfo.ModFiles"
    xmlns:files="clr-namespace:NexusMods.App.UI.Controls.Trees.Files">
    <Design.DataContext>
        <!-- This ViewModel has a bool switch 'showMultipleRoots' to toggle a view which also has Saves -->
        <viewModFiles:ModFilesDesignViewModel AlwaysRootFolders="False" ShowMultipleRoots="False" />
    </Design.DataContext>
    <!-- In this view specifically, we want to shift the text of the TreeDataGrid 
         such that we align the 'name' field with the
    -->
    <UserControl.Styles>
        <!-- Note: Can't use nth-child on textblock itself. Not even actual control source does that. -->
        <Style Selector="TreeDataGridColumnHeader:nth-child(1)">
            <Style Selector="^ TextBlock">
                <Setter Property="Margin" Value="24,0,0,0" />
            </Style>
        </Style>
    </UserControl.Styles>
    
    <!-- Visual Tree -->
    <Grid RowDefinitions="Auto Auto *">
        
        <!-- 1 location, display its path -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" IsVisible="True" Name="SingleLocationStackPanel"
                    Margin="24,12,24,12">
            
            <TextBlock Text="{x:Static resources:Language.ViewModFilesView_Location}"
                       Foreground="{StaticResource NeutralSubdued}"
                       VerticalAlignment="Center"
                       Classes="TitleSMSemi"
                       Margin="4,0,0,0"/>

            <TextBlock Name="SingleLocationText"
                       VerticalAlignment="Center"
                       Foreground="{StaticResource NeutralSubdued}"
                       Margin="8,0,0,0"/>
        </StackPanel>
        
        <!-- 2 locations, display the number -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" IsVisible="True" Name="MultiLocationStackPanel"
                    Margin="24,12,24,12">
            
            <TextBlock Text="{x:Static resources:Language.ViewModFilesView_Locations}"
                       Foreground="{StaticResource NeutralSubdued}"
                       VerticalAlignment="Center"
                       Classes="TitleSMSemi"
                       Margin="4,0,0,0"/>

            <TextBlock Name="MultiLocationCountText"
                       VerticalAlignment="Center"
                       Foreground="{StaticResource NeutralSubdued}"
                       Margin="8,0,0,0"/>
        </StackPanel>
        
        <TreeDataGrid Grid.Row="2" Classes="TreeWhiteCaret"
                      ShowColumnHeaders="True"
                      x:Name="ModFilesTreeDataGrid" >
            <TreeDataGrid.Resources>
                <DataTemplate x:Key="CustomRow" DataType="{x:Type files:IFileTreeNodeViewModel}">
                    <files:FileTreeNodeView DataContext="{CompiledBinding}" />
                </DataTemplate>
            </TreeDataGrid.Resources>
        </TreeDataGrid>
    </Grid>
</reactiveUi:ReactiveUserControl>

