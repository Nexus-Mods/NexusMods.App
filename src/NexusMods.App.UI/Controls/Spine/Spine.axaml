<reactiveUi:ReactiveUserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="NexusMods.App.UI.Controls.Spine.Spine"
    x:TypeArguments="spine:SpineViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:buttons="clr-namespace:NexusMods.UI.Theme.Controls.Spine.Buttons;assembly=NexusMods.UI.Theme"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:spine="clr-namespace:NexusMods.App.UI.Controls.Spine"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="0,20">
        <reactiveUi:ViewModelViewHost x:Name="Home" />
        <Border
            BorderBrush="{DynamicResource StructuralBorderBrush}"
            BorderThickness="0,2,0,0"
            Margin="0,16"
            Width="48" />

        <ItemsControl
            Margin="0"
            Padding="0"
            x:Name="Games">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <buttons:Game ViewModel="{Binding .}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <reactiveUi:ViewModelViewHost x:Name="Add" />
    </StackPanel>

</reactiveUi:ReactiveUserControl>
