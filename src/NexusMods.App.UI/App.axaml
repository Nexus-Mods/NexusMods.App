<Application
    x:Class="NexusMods.App.UI.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:local="using:NexusMods.App.UI"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedThemeVariant="Dark">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <StyleInclude Source="avares://NexusMods.App.UI/Nexus.xaml" />
    </Application.Styles>

    <Application.Resources>
        <ResourceInclude x:Key="Colors" Source="avares://NexusMods.App.UI/Palatte/Colors.axaml"/>
        <ResourceInclude x:Key="Fonts" Source="avares://NexusMods.App.UI/Palatte/Fonts.axaml"/>

        <ResourceInclude x:Key="StandardButtonTheme" Source="avares://NexusMods.App.UI/Controls/Buttons/StandardButtonTheme.axaml"/>
    </Application.Resources>
</Application>
