<reactiveUi:ReactiveUserControl
    d:DesignHeight="451"
    d:DesignWidth="944"
    mc:Ignorable="d"
    x:Class="NexusMods.App.UI.RightContent.Home.HomeView"
    x:TypeArguments="home:IHomeViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:home="clr-namespace:NexusMods.App.UI.RightContent.Home"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.DataContext>
        <home:HomeViewDesignerViewModel />
    </Design.DataContext>
    <Border Classes="HighlightedArea" Margin="24">
        <Grid
            ColumnDefinitions="*, Auto"
            Margin="24,0"
            RowDefinitions="Auto, Auto, Auto, Auto">
            <TextBlock
                Classes="H5MontserratSemi"
                Grid.Row="0"
                Margin="0,27.5,0,15.5"
                Text="We found games ready to mod!" />
            <ScrollViewer
                ClipToBounds="True"
                CornerRadius="8"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="1">
                <reactiveUi:ViewModelViewHost x:Name="FoundGamesHost" />
            </ScrollViewer>
            <TextBlock
                Classes="CaptionMontserratSemi"
                Grid.Column="0"
                Grid.Row="2"
                Margin="0,12"
                Text="CANT\'T SEE YOUR GAME" />
            <Button
                Classes="SecondaryOutlined"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="3">
                <TextBlock Text="BROWSE ALL GAMES" />
            </Button>
        </Grid>
    </Border>
</reactiveUi:ReactiveUserControl>

