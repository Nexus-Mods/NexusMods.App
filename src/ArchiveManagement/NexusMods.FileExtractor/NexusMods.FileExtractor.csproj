<Project Sdk="Microsoft.NET.Sdk">
    <!-- NuGet Package Shared Details -->
    <Import Project="$([MSBuild]::GetPathOfFileAbove('NuGet.Build.props', '$(MSBuildThisFileDirectory)../'))" />

    <ItemGroup>
        <ProjectReference Include="..\..\Abstractions\NexusMods.Abstractions.Activities\NexusMods.Abstractions.Activities.csproj" />
        <ProjectReference Include="..\..\Abstractions\NexusMods.Abstractions.FileExtractor\NexusMods.Abstractions.FileExtractor.csproj" />
        <ProjectReference Include="..\..\Abstractions\NexusMods.Abstractions.IO\NexusMods.Abstractions.IO.csproj" />
        <ProjectReference Include="..\..\Extensions\NexusMods.Extensions.BCL\NexusMods.Extensions.BCL.csproj" />
        <ProjectReference Include="..\..\NexusMods.ProxyConsole.Abstractions\NexusMods.ProxyConsole.Abstractions.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="CliWrap" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
        <PackageReference Include="System.Linq.Async" />
        <PackageReference Include="TransparentValueObjects" PrivateAssets="all" OutputItemType="Analyzer" ReferenceOutputAssembly="false"/>
    </ItemGroup>

    <ItemGroup>
        <!-- Using .nupkg convention for auto extract. -->
        <None Update="runtimes\win-x64\**">
            <Pack>true</Pack>
            <PackagePath>runtimes/win-x64</PackagePath>
        </None>

        <None Update="runtimes\osx-x64\**">
            <Pack>true</Pack>
            <PackagePath>runtimes/osx-x64</PackagePath>
        </None>

        <None Update="runtimes\linux-x64\**">
            <Pack>true</Pack>
            <PackagePath>runtimes/linux-x64</PackagePath>
        </None>

        <None Update="build\NexusMods.FileExtractor.targets">
            <Pack>true</Pack>
            <PackagePath>build\NexusMods.FileExtractor.targets</PackagePath>
        </None>
    </ItemGroup>

    <!-- Non-NuGet Only -->
    <Import Project="build\NexusMods.FileExtractor.targets" />
</Project>
