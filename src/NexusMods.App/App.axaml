<Application
    x:Class="NexusMods.App.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:ui="using:NexusMods.App.UI"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedThemeVariant="Dark">
    <Application.DataTemplates>
        <ui:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://NexusMods.App.UI/Pages/TreeDataGridSharedResources.axaml" />
                <ResourceInclude Source="avares://NexusMods.App.UI/Pages/LoadoutPage/TreeDataGridLoadoutResources.axaml" />
                <ResourceInclude Source="avares://NexusMods.App.UI/Pages/LibraryPage/TreeDataGridLibraryResources.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <StyleInclude Source="avares://NexusMods.Themes.NexusFluentDark/NexusFluentDarkTheme.axaml" />
    </Application.Styles>

</Application>
