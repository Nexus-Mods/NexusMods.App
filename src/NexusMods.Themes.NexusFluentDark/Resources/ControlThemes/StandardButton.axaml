    <!-- CONTROL THEME -->
    
    <!-- need original button theme as well as all the new stuff -->
    <!-- default colours are based on Small-Tertiary-Weak -->
    <ControlTheme x:Key="{x:Type controls:StandardButton}" TargetType="controls:StandardButton">
        <Setter Property="Background" Value="{StaticResource ButtonBackground}" />
        <Setter Property="Foreground" Value="{StaticResource ButtonForeground}" />
        <Setter Property="BorderBrush" Value="{StaticResource ButtonBorderBrush}" />
        <Setter Property="BorderThickness" Value="{StaticResource ButtonBorderThemeThickness}" />
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
        <Setter Property="Padding" Value="{StaticResource StandardButtonPaddingSmall}" /> 
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="RenderTransform" Value="none" />

        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <!-- this is only shown if Content is set. This can be used interchangeably with the regular 
                    Avalonia button to show whatever content we need -->
                    <ContentPresenter x:Name="PART_ContentPresenter"
                                      Background="{TemplateBinding Background}"
                                      BorderBrush="{TemplateBinding BorderBrush}"
                                      BorderThickness="{TemplateBinding BorderThickness}"
                                      CornerRadius="{TemplateBinding CornerRadius}"
                                      Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Padding="{StaticResource ButtonPadding}"
                                      RecognizesAccessKey="True"
                                      HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />

                    <!-- this is used when Content isn't set (used for normal buttons) -->
                    <Border Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Spacing="{StaticResource Spacing-0.5}">
                            <icons:UnifiedIcon Name="PART_LeftIcon"
                                               Size="{StaticResource StandardButtonIconSizeSmall}"
                                               Margin="0,2,0,3" />
                            <TextBlock Name="PART_Label"
                                       Text="{TemplateBinding Text}"
                                       Margin="2,2"
                                       VerticalAlignment="Center"/>
                            <icons:UnifiedIcon Name="PART_RightIcon"
                                               Size="{StaticResource StandardButtonIconSizeSmall}"
                                               Margin="0,2,0,3"/>
                        </StackPanel>
                    </Border>
                </Panel>
            </ControlTemplate>
        </Setter>

        <!-- Set the default button styles when ContentPresenter is used -->
        <Style Selector="^:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundPointerOver}" />
            <Setter Property="BorderBrush" Value="{StaticResource ButtonBorderBrushPointerOver}" />
            <Setter Property="Foreground" Value="{StaticResource ButtonForegroundPointerOver}" />
        </Style>
        <Style Selector="^:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundPressed}" />
            <Setter Property="BorderBrush" Value="{StaticResource ButtonBorderBrushPressed}" />
            <Setter Property="Foreground" Value="{StaticResource ButtonForegroundPressed}" />
        </Style>
        <Style Selector="^:disabled /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundDisabled}" />
            <Setter Property="BorderBrush" Value="{StaticResource ButtonBorderBrushDisabled}" />
            <Setter Property="Foreground" Value="{StaticResource ButtonForegroundDisabled}" />
        </Style>
        <Style Selector="^:flyout-open /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundPointerOver}" />
            <Setter Property="BorderBrush" Value="{StaticResource ButtonBorderBrushPointerOver}" />
            <Setter Property="Foreground" Value="{StaticResource ButtonForegroundPointerOver}" />
        </Style>

        <!-- Set the default button styles when our Properties (Fill, Size etc.) are being used -->
        <!-- Default colours are based on Small-Tertiary-Weak -->
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundPointerOver}" />
            <Setter Property="BorderBrush" Value="{StaticResource ButtonBorderBrushPointerOver}" />
            <Setter Property="Foreground" Value="{StaticResource ButtonForegroundPointerOver}" />
        </Style>
        <Style Selector="^:pressed">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundPressed}" />
            <Setter Property="BorderBrush" Value="{StaticResource ButtonBorderBrushPressed}" />
            <Setter Property="Foreground" Value="{StaticResource ButtonForegroundPressed}" />
        </Style>
        <Style Selector="^:disabled">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundDisabled}" />
            <Setter Property="BorderBrush" Value="{StaticResource ButtonBorderBrushDisabled}" />
            <Setter Property="Foreground" Value="{StaticResource ButtonForegroundDisabled}" />
        </Style>
        <Style Selector="^:flyout-open">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundPressed}" />
            <Setter Property="BorderBrush" Value="{StaticResource ButtonBorderBrushPressed}" />
            <Setter Property="Foreground" Value="{StaticResource ButtonForegroundPressed}" />
        </Style>

        <!-- sizes -->

        <!-- extra small -->
        <Style Selector="^[Size=ExtraSmall]">
            <Setter Property="Padding" Value="{StaticResource StandardButtonPaddingExtraSmall}" />
            
            <Style Selector="^ icons|UnifiedIcon">
                <Setter Property="Size" Value="{StaticResource StandardButtonIconSizeExtraSmall}" />
            </Style>
        </Style>

        <!-- medium -->
        <Style Selector="^[Size=Medium]">
            <Setter Property="Padding" Value="{StaticResource StandardButtonPaddingMedium}" />

            <Style Selector="^ StackPanel">
                <Setter Property="Spacing" Value="{StaticResource Spacing-1}" />
            </Style>

            <Style Selector="^ icons|UnifiedIcon">
                <Setter Property="Size" Value="{StaticResource StandardButtonIconSizeMedium}" />
            </Style>

            <Style Selector="^ TextBlock#PART_Label">
                <Setter Property="Margin" Value="2,0,2,1" />
                <Setter Property="Theme" Value="{StaticResource BodyLGNormalTheme}" />
            </Style>
            
        </Style>

        <!-- icon only variants -->
        <Style Selector="^[ShowIcon=IconOnly]">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Style Selector="^ icons|UnifiedIcon">
                <Setter Property="Margin" Value="0" />
            </Style>
        </Style>
        
        <!-- fills and types -->

        <!-- PRIMARY -->
        <Style Selector="^[Type=Primary]">

            <!-- PRIMARY/STRONG -->
            <Style Selector="^[Fill=Strong]">
                <Setter Property="BorderThickness" Value="{StaticResource ButtonPrimaryStrongBorderThickness}" />
                <Setter Property="Background" Value="{StaticResource ButtonPrimaryStrongBackground}" />
                <Setter Property="Foreground" Value="{StaticResource ButtonPrimaryStrongForeground}" />
                <Setter Property="BorderBrush" Value="{StaticResource ButtonPrimaryStrongBorderBrush}" />

                <Style Selector="^:pointerover">
                    <Setter Property="Background" Value="{StaticResource ButtonPrimaryStrongBackgroundPointerOver}" />
                    <Setter Property="Foreground" Value="{StaticResource ButtonPrimaryStrongForegroundPointerOver}" />
                    <Setter Property="BorderBrush" Value="{StaticResource ButtonPrimaryStrongBorderBrushPointerOver}" />
                </Style>

                <Style Selector="^:pressed">
                    <Setter Property="Background" Value="{StaticResource ButtonPrimaryStrongBackgroundPressed}" />
                    <Setter Property="Foreground" Value="{StaticResource ButtonPrimaryStrongForegroundPressed}" />
                    <Setter Property="BorderBrush" Value="{StaticResource ButtonPrimaryStrongBorderBrushPressed}" />
                </Style>

                <Style Selector="^:disabled">
                    <Setter Property="Background" Value="{StaticResource ButtonPrimaryStrongBackgroundDisabled}" />
                    <Setter Property="Foreground" Value="{StaticResource ButtonPrimaryStrongForegroundDisabled}" />
                    <Setter Property="BorderBrush" Value="{StaticResource ButtonPrimaryStrongBorderBrushDisabled}" />
                </Style>
                
                <Style Selector="^:flyout-open">
                    <Setter Property="Background" Value="{StaticResource ButtonPrimaryStrongBackgroundPressed}" />
                    <Setter Property="Foreground" Value="{StaticResource ButtonPrimaryStrongForegroundPressed}" />
                    <Setter Property="BorderBrush" Value="{StaticResource ButtonPrimaryStrongBorderBrushPressed}" />
                </Style>
            </Style>

            <!-- PRIMARY/WEAK -->
            <Style Selector="^[Fill=Weak]">
                <Setter Property="BorderThickness" Value="{StaticResource ButtonPrimaryWeakBorderThickness}" />
                <Setter Property="Background" Value="{StaticResource ButtonPrimaryWeakBackground}" />
                <Setter Property="Foreground" Value="{StaticResource ButtonPrimaryWeakForeground}" />
                <Setter Property="BorderBrush" Value="{StaticResource ButtonPrimaryWeakBorderBrush}" />

                <Style Selector="^:pointerover">
                    <Setter Property="Background" Value="{StaticResource ButtonPrimaryWeakBackgroundPointerOver}" />
                    <Setter Property="Foreground" Value="{StaticResource ButtonPrimaryWeakForegroundPointerOver}" />
                    <Setter Property="BorderBrush" Value="{StaticResource ButtonPrimaryWeakBorderBrushPointerOver}" />
                </Style>

                <Style Selector="^:pressed">
