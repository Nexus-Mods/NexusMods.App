    <StaticResource x:Key="ButtonTertiaryWeakBorderBrush" ResourceKey="StrokeTranslucentModerateBrush" />
    <StaticResource x:Key="ButtonTertiaryWeakBackgroundPointerOver" ResourceKey="SurfaceTranslucentHighBrush" />
