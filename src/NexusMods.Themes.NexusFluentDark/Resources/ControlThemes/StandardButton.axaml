<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:NexusMods.App.UI.Controls;assembly=NexusMods.App.UI"
                    xmlns:icons="clr-namespace:NexusMods.Icons;assembly=NexusMods.Icons"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
                    x:ClassModifier="internal">
    
    <!--
    Control Theme for our StandardButton (src/NexusMods.App.UI/Controls/StandardButton.cs) which is based on the default 
    Avalonia Button. This allows us to set properties like Type, Fill, Size and ShowIcon to get the desired button style 
    to exactly match Figma.
    -->    
    
    <Design.PreviewWith>
        <Border Padding="16">
            <StackPanel Spacing="8" Orientation="Horizontal">
                <StackPanel Spacing="8">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                    <controls:StandardButton Text="Extra Small 24px" Size="ExtraSmall" ShowIcon="None" />
                    <controls:StandardButton Text="Left" Size="ExtraSmall" ShowIcon="Left" LeftIcon="{x:Static icons:IconValues.Code}" />
                    <controls:StandardButton Text="Right" Size="ExtraSmall" ShowIcon="Right" RightIcon="{x:Static icons:IconValues.Code}" />
                    <controls:StandardButton Text="Both" Size="ExtraSmall" ShowIcon="Both" LeftIcon="{x:Static icons:IconValues.Code}" />
                    <controls:StandardButton Size="ExtraSmall" ShowLabel="False" ShowIcon="Left" LeftIcon="{x:Static icons:IconValues.Code}" />
                    <controls:StandardButton Size="ExtraSmall" ShowLabel="False" ShowIcon="Both" LeftIcon="{x:Static icons:IconValues.Code}" />
                    <controls:StandardButton Size="ExtraSmall" ShowLabel="False" ShowIcon="IconOnly" LeftIcon="{x:Static icons:IconValues.Code}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <controls:StandardButton Text="Small 28px (Default)" Size="Small" ShowIcon="None" />
                        <controls:StandardButton Text="Left" Size="Small" ShowIcon="Left" LeftIcon="{x:Static icons:IconValues.Code}" />
                        <controls:StandardButton Text="Right" Size="Small" ShowIcon="Right" RightIcon="{x:Static icons:IconValues.Code}" />
                        <controls:StandardButton Text="Both" Size="Small" ShowIcon="Both" LeftIcon="{x:Static icons:IconValues.Code}" />
                        <controls:StandardButton Size="Small" ShowLabel="False" ShowIcon="Left" LeftIcon="{x:Static icons:IconValues.Code}" />
                        <controls:StandardButton Size="Small" ShowLabel="False" ShowIcon="Both" LeftIcon="{x:Static icons:IconValues.Code}" />
                        <controls:StandardButton Size="Small" ShowLabel="False" ShowIcon="IconOnly" LeftIcon="{x:Static icons:IconValues.Code}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <controls:StandardButton Text="Medium 36px" Size="Medium" ShowIcon="None" />
                        <controls:StandardButton Text="Left" Size="Medium" ShowIcon="Left" LeftIcon="{x:Static icons:IconValues.Code}" />
                        <controls:StandardButton Text="Right" Size="Medium" ShowIcon="Right" RightIcon="{x:Static icons:IconValues.Code}" />
                        <controls:StandardButton Text="Both" Size="Medium" ShowIcon="Both" LeftIcon="{x:Static icons:IconValues.Code}" />
                        <controls:StandardButton Size="Medium" ShowLabel="False" ShowIcon="Left" LeftIcon="{x:Static icons:IconValues.Code}" />
                        <controls:StandardButton Size="Medium" ShowLabel="False" ShowIcon="Both" LeftIcon="{x:Static icons:IconValues.Code}" />
                        <controls:StandardButton Size="Medium" ShowLabel="False" ShowIcon="IconOnly" LeftIcon="{x:Static icons:IconValues.Code}" />
                    </StackPanel>
                    <controls:StandardButton Text="Open Menu" Size="ExtraSmall" ShowIcon="Right" Type="Primary"
                                             Fill="Weak">
                        <controls:StandardButton.Flyout>
                            <MenuFlyout>
                                <MenuItem Header="Item 1"/>
                                <MenuItem Header="Item 2"/>
                            </MenuFlyout>
                        </controls:StandardButton.Flyout>
                    </controls:StandardButton>
                    <controls:StandardButton ShowIcon="Both" ShowLabel="False" />
                    <controls:StandardButton ShowIcon="Left" ShowLabel="False" />
                    <controls:StandardButton ShowIcon="Left" ShowLabel="False" Size="Medium" />
                    <StackPanel Orientation="Horizontal">
                        <controls:StandardButton ShowIcon="Left" Size="Medium" Text="View" />
                        <controls:StandardButton ShowIcon="Left" ShowLabel="False" Size="Medium" />
                    </StackPanel>
                    <controls:StandardButton ShowIcon="IconOnly" ShowLabel="False" />
                    <controls:StandardButton ShowIcon="IconOnly" ShowLabel="False" Size="Medium" />
                </StackPanel>
                <StackPanel Spacing="8">
                    <Button Content="Avalonia Button" />
                    <controls:StandardButton Text="StandardButton Text" />
                    <controls:StandardButton Content="StandardButton Content" />
                    <controls:StandardButton Text="Both Icons" ShowIcon="Both" />
                    <controls:StandardButton Text="Medium" ShowIcon="Both" Size="Medium" />
                </StackPanel>

                <StackPanel Spacing="8">
                    <controls:StandardButton Text="Primary-Strong" ShowIcon="Right" Type="Primary" Fill="Strong" />
                    <controls:StandardButton Text="Primary-Strong" ShowIcon="Right" Type="Primary" Fill="Strong"
                                             IsEnabled="False" />
                    <controls:StandardButton Text="Primary-Weak" ShowIcon="Right" Type="Primary" Fill="Weak" />
                    <controls:StandardButton Text="Primary-Weak" ShowIcon="Right" Type="Primary" Fill="Weak"
                                             IsEnabled="False" />
                </StackPanel>

                <StackPanel Spacing="8">
                    <controls:StandardButton Text="Secondary-Strong" ShowIcon="Right" Type="Secondary" Fill="Strong" />
                    <controls:StandardButton Text="Secondary-Strong" ShowIcon="Right" Type="Secondary" Fill="Strong"
                                             IsEnabled="False" />
                    <controls:StandardButton Text="Secondary-Weak" ShowIcon="Right" Type="Secondary" Fill="Weak" />
                    <controls:StandardButton Text="Secondary-Weak" ShowIcon="Right" Type="Secondary" Fill="Weak"
                                             IsEnabled="False" />
                    <controls:StandardButton Text="Secondary-None" ShowIcon="Right" Type="Secondary" Fill="None" />
                    <controls:StandardButton Text="Secondary-None" ShowIcon="Right" Type="Secondary" Fill="None"
                                             IsEnabled="False" />
                </StackPanel>

                <StackPanel Spacing="8">
                    <controls:StandardButton Text="Tertiary-Weak" ShowIcon="Right" Type="Tertiary" Fill="Weak" />
                    <controls:StandardButton Text="Tertiary-Weak" ShowIcon="Right" Type="Tertiary" Fill="Weak"
                                             IsEnabled="False" />
                    <controls:StandardButton Text="Primary-WeakAlt" ShowIcon="Right" Type="Tertiary" Fill="WeakAlt" />
                    <controls:StandardButton Text="Primary-WeakAlt" ShowIcon="Right" Type="Tertiary" Fill="WeakAlt"
                                             IsEnabled="False" />
                    <controls:StandardButton Text="Tertiary-None" ShowIcon="Right" Type="Tertiary" Fill="None" />
                    <controls:StandardButton Text="Tertiary-None" ShowIcon="Right" Type="Tertiary" Fill="None"
                                             IsEnabled="False" />
                </StackPanel>
                
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <!-- RESOURCES -->
    
    <!-- Unusual values to account for rendering differences with Figma and rounding errors. This makes sure that we 
    don't have to set fixed heights but the heights are ending up the same as Figma i.e. Medium button is 36 pixels high,
     Small is 28 and ExtraSmall is 24. --> 
    <Thickness x:Key="StandardButtonPaddingMedium">6,6,6,5</Thickness>
    <Thickness x:Key="StandardButtonPaddingSmall">6,4,6,3</Thickness>
    <Thickness x:Key="StandardButtonPaddingExtraSmall">6,2,6,1</Thickness>
    
    <sys:Double x:Key="StandardButtonIconSizeMedium">20</sys:Double>
    <sys:Double x:Key="StandardButtonIconSizeSmall">16</sys:Double>
    <sys:Double x:Key="StandardButtonIconSizeExtraSmall">16</sys:Double>
    
    <!-- The below will also be used when ComboBox and SplitButtons are extended by us so that the styling matches -->
    
