<Window
    Height="450"
    Title="NexusMods.App - UI Sandbox"
    Width="800"
    d:DesignHeight="450"
    d:DesignWidth="1200"
    mc:Ignorable="d"
    x:Class="NexusMods.UI.Theme.SampleApp.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icons="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid
        ColumnDefinitions="160, 130, 3, 130, 3, 130, 3, 130, 3, 130, 3, 130, 3, 130"
        Margin="10"
        RowDefinitions="Auto, 3, Auto, 3, Auto, 3, Auto">
        <!--  Buttons  -->
        <TextBlock
            Classes="Small"
            Grid.Column="1"
            Grid.Row="0">
            PRIMARY + ICON
        </TextBlock>
        <TextBlock
            Classes="Small"
            Grid.Column="3"
            Grid.Row="0">
            PRIMARY
        </TextBlock>

        <TextBlock
            Classes="Small"
            Grid.Column="5"
            Grid.Row="0">
            PRIMARY OUTLINE + ICON
        </TextBlock>
        <TextBlock
            Classes="Small"
            Grid.Column="7"
            Grid.Row="0">
            PRIMARY OUTLINE
        </TextBlock>

        <TextBlock
            Classes="Small"
            Grid.Column="9"
            Grid.Row="0">
            SECONDARY OUTLINE + ICON
        </TextBlock>
        <TextBlock
            Classes="Small"
            Grid.Column="11"
            Grid.Row="0">
            SECONDARY OUTLINE
        </TextBlock>

        <TextBlock
            Classes="Small"
            Grid.Column="0"
            Grid.Row="2">
            DEFAULT
        </TextBlock>
        <TextBlock
            Classes="Small"
            Grid.Column="0"
            Grid.Row="4">
            DISABLED
        </TextBlock>


        <Button
            Classes="Primary Icon"
            Grid.Column="1"
            Grid.Row="2">
            <StackPanel Orientation="Horizontal">
                <icons:Icon FontSize="20" Value="mdi-content-save" />
                <TextBlock>BUTTON</TextBlock>
            </StackPanel>
        </Button>
        <Button
            Classes="Primary Icon"
            Grid.Column="1"
            Grid.Row="4"
            IsEnabled="False">
            <StackPanel Orientation="Horizontal">
                <icons:Icon FontSize="20" Value="mdi-content-save" />
                <TextBlock>BUTTON</TextBlock>
            </StackPanel>
        </Button>

        <Button
            Classes="Primary"
            Grid.Column="3"
            Grid.Row="2">
            <TextBlock>BUTTON</TextBlock>
        </Button>

        <Button
            Classes="Primary"
            Grid.Column="3"
            Grid.Row="4"
            IsEnabled="False">
            <TextBlock>BUTTON</TextBlock>
        </Button>


        <Button
            Classes="PrimaryOutline"
            Grid.Column="5"
            Grid.Row="2">
            <StackPanel Orientation="Horizontal">
                <icons:Icon FontSize="20" Value="mdi-content-save" />
                <TextBlock>BUTTON</TextBlock>
            </StackPanel>
        </Button>
        <Button
            Classes="PrimaryOutline"
            Grid.Column="5"
            Grid.Row="4"
            IsEnabled="False">
            <StackPanel Orientation="Horizontal">
                <icons:Icon FontSize="20" Value="mdi-content-save" />
                <TextBlock>BUTTON</TextBlock>
            </StackPanel>
        </Button>

        <Button
            Classes="PrimaryOutline"
            Grid.Column="7"
            Grid.Row="2">
            <TextBlock>BUTTON</TextBlock>
        </Button>
        <Button
            Classes="PrimaryOutline"
            Grid.Column="7"
            Grid.Row="4"
            IsEnabled="False">
            <TextBlock>BUTTON</TextBlock>
        </Button>

        <Button
            Classes="Secondary"
            Grid.Column="9"
            Grid.Row="2">
            <StackPanel Orientation="Horizontal">
                <icons:Icon FontSize="20" Value="mdi-content-save" />
                <TextBlock>BUTTON</TextBlock>
            </StackPanel>
        </Button>
        <Button
            Classes="Secondary"
            Grid.Column="9"
            Grid.Row="4"
            IsEnabled="False">
            <StackPanel Orientation="Horizontal">
                <icons:Icon FontSize="20" Value="mdi-content-save" />
                <TextBlock>BUTTON</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Window>
